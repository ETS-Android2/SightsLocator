<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".intro.SplashScreenActivity">

  <ImageView
    android:id="@+id/ivSplashScreenLogo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:contentDescription="@string/application_logo_content_description"
    android:src="@drawable/app_logo" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingTop="@dimen/large_padding"
    android:textColor="@color/primary"
    android:text="@string/app_name"
    android:textSize="@dimen/huge_text" />

  <com.skyfishjy.library.RippleBackground
    android:id="@+id/animSplashScreenRipple"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/large_padding"
    app:rb_color="@color/primary_light"
    app:rb_duration="3000"
    app:rb_radius="10dp"
    app:rb_rippleAmount="4"
    app:rb_scale="6">

    <ImageView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:contentDescription="@string/showing_loading_icon"
      android:paddingTop="@dimen/large_padding"
      android:src="@drawable/ic_map"
      app:tint="@color/primary" />
  </com.skyfishjy.library.RippleBackground>

</LinearLayout>